# ==============================================
# VARIABLES DE ENTORNO - MODO DESARROLLO
# ==============================================
# Copia este archivo a .env.development.local

# ⚡ OPTIMIZACIONES DE DESARROLLO
# ==============================================

# Desactivar telemetría (más rápido)
NEXT_TELEMETRY_DISABLED=1

# Aumentar memoria disponible para Node.js
NODE_OPTIONS='--max-old-space-size=8192'

# Modo desarrollo optimizado
NODE_ENV=development

# ⚡ OPTIMIZACIONES DE SUPABASE
# ==============================================

# Cache de queries (reduce latencia)
NEXT_PUBLIC_SUPABASE_CACHE_ENABLED=true

# Timeout de queries (evita bloqueos)
NEXT_PUBLIC_SUPABASE_REQUEST_TIMEOUT=5000

# ⚡ OPTIMIZACIONES DE NEXT.JS
# ==============================================

# Skip validation en dev (más rápido)
SKIP_ENV_VALIDATION=false

# Habilitar source maps para debugging
GENERATE_SOURCEMAP=true

# ==============================================
# TUS VARIABLES DE SUPABASE
# ==============================================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
